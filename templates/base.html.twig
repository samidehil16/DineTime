<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}My Application{% endblock %}</title>
        {% block stylesheets %}
            {# <link rel="stylesheet" type="text/css" href="{{ asset('styles/app.css') }}"/> #}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block navbar %}
                <div id="navbar" class="h-16 w-full bg-neutral-50 shadow-md">
                    <div class="flex max-w-screen-xl mx-auto items-center justify-between h-full w-full">
                        <div class="w-full flex items-center space-x-48">
                            <div class="w-auto font-bold text-lg text-red-500">
                                <p>DineTime</p>
                            </div>
                            <div class="w-auto flex items-center space-x-10">
                                <a href="#">Restaurants</a>
                                <a href="#">Notre Histoire</a>
                            </div>

                        </div>
                        <div class="w-auto flex items-center space-x-10">
                            {% if app.user %}
                            
                             {{ app.user.email }} 
                            {% else %}
                            <a class="rounded-xl hover:text-red-500 transition-all delay-75 px-4 py-1 w-auto" href="#">Connexion</a>
                            <a class="rounded-xl text-white bg-neutral-800 transition-all delay-75 px-4 py-1 w-auto" href="#">Inscription</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endblock %}

            <div id="content">
                {% block content %}{% endblock %}
            </div>
        {% endblock %}
    </body>
</html>
